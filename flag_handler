#!/bin/bash

# deal with the flags

# possible flags:
# -l for listing the flags
# -h for help
# -f pattern for files
# -t pattern for tests
# -e pattern for expected
# -d project directory
# -j for tests in json

# finished flags:
# -c for compiler
# -a for adding flags
# -r :flag: for remove a flag
# -r for removing all flags


proj_dir="$HOME/.gradescope"
defaults="$HOME/.defaults"
#get the default compiler and flags
compiler=$(grep "compiler: " "$defaults" | sed 's/compiler: //') 
flags=$(grep "^flag:" "$defaults" | cut -d ' ' -f 2-)

while getopts "c:r:" opt; do
  case $opt in
    c)
      compiler="$OPTARG"
      ;;
    a)
      echo "add the flag"
      ;;
    r)
      if [ "$OPTARG" ]; then
        echo "remove a single flag"
      else
        echo "remove all flags"
      fi
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
  esac
done

# save the compiler and flags
sed -i "s/^compiler:.*/compiler: $compiler/" "$defaults"
echo "save the flags here"
